<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">


    <TextView
        android:id="@+id/trash_type_display"
        android:layout_width="174dp"
        android:layout_height="44dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="4dp"

/>

    <TextView
        android:id="@+id/trash_name_display"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toRightOf="@id/trash_type_display"
        android:paddingHorizontal="5dp"


        />
    <TextView
        android:id="@+id/trash_price_display"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toRightOf="@id/trash_name_display"
        android:paddingHorizontal="5dp"

        />
    <TextView
        android:id="@+id/trash_unit_display"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toRightOf="@id/trash_price_display"
        android:paddingHorizontal="5dp"
        />


</android.support.constraint.ConstraintLayout>