<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.recyclingsg.app.MainActivity">


    <FrameLayout
        android:id="@+id/mapfragment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <android.support.constraint.ConstraintLayout
        android:id="@+id/search_bar"
        android:layout_width="342dp"
        android:layout_height="59dp"
        android:layout_marginBottom="4dp"
        android:layout_marginEnd="15dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="4dp"
        android:background="@drawable/white_border"
        android:elevation="10dp"
        app:layout_constraintBottom_toTopOf="@+id/trash_type_selection_spinner"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.444">


        <ImageView

            android:id="@+id/ic_magnify"
            android:layout_width="0dp"
            android:layout_height="30dp"
            android:layout_marginLeft="16dp"
            android:layout_marginStart="4dp"
            android:src="@drawable/ic_magnify"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.482" />
        <!--<EditText-->
        <!--android:layout_width="0dp"-->
        <!--android:layout_height="match_parent"-->
        <!--android:layout_marginLeft="5dp"-->
        <!--android:layout_marginRight="10dp"-->
        <!--app:layout_constraintStart_toEndOf="@id/ic_magnify"-->
        <!--app:layout_constraintEnd_toEndOf="parent"-->
        <!--app:layout_constraintTop_toTopOf="parent"-->
        <!--app:layout_constraintBottom_toBottomOf="parent"-->
        <!--android:inputType="text"-->
        <!--android:textSize="18sp"-->
        <!--android:textColor="#000"-->
        <!--android:id="@+id/search_field"-->
        <!--android:hint="Recycling Areas"-->
        <!--/>-->

        <AutoCompleteTextView
            android:id="@+id/autoCompleteTextView"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_marginEnd="8dp"
            android:ems="10"
            android:hint="Search Location"
            android:inputType="text"
            android:text=""
            android:textColor="#000"
            android:textSize="18sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/ic_magnify"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.473">

            <!--android:layout_width="wrap_content"-->
            <!--android:layout_height="wrap_content"-->
            <!--app:layout_constraintTop_toBottomOf="@id/search_bar"-->
            <!--app:layout_constraintStart_toStartOf="@id/search_field"-->


            <requestFocus />

        </AutoCompleteTextView>


    </android.support.constraint.ConstraintLayout>

    <Spinner
        android:id="@+id/trash_type_selection_spinner"
        android:layout_width="174dp"
        android:layout_height="44dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"

        android:layout_marginTop="4dp"
        android:background="@android:color/holo_blue_dark"
        android:elevation="10dp"
        app:layout_constraintEnd_toStartOf="@+id/search_button"
        app:layout_constraintHorizontal_bias="0.393"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/search_bar" />


    <Button
        android:id="@+id/search_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_marginRight="16dp"
        android:elevation="10dp"
        android:text="SEARCH"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/search_bar" />

    <Button
        android:id="@+id/addPost"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="loadPostPrivateCollectionPointActivity"
        android:text="Post Collection"

        app:layout_constraintTop_toBottomOf="@id/trash_type_selection_spinner" />

    <Button

        android:id="@+id/Login"
        style="@style/com_facebook_loginview_silver_style"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="12dp"
        android:layout_marginTop="8dp"
        android:onClick="loadFacebookLogin"
        android:text="Login"
        app:layout_constraintBottom_toTopOf="@+id/trash_type_selection_spinner"
        app:layout_constraintEnd_toStartOf="@+id/search_bar"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/Navigation"
        android:layout_width="123dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginTop="8dp"
        android:onClick="navigate"
        android:text="Navigation"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/addPost"
        app:layout_constraintVertical_bias="0.027" />

    <Button
        android:id="@+id/depositTrash"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:onClick="loadDepositCategoryActivity"
        android:text="Deposit"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/Navigation" />

    <Button
        android:id="@+id/statisticActivityButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:onClick="loadStatisticsActivity"
        android:text="Check My Statistics"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/depositTrash" />

        <!--android:id="@+id/depositTrash"-->
        <!--android:layout_width="wrap_content"-->
        <!--android:layout_height="wrap_content"-->
        <!--android:layout_marginEnd="32dp"-->
        <!--android:layout_marginTop="20dp"-->
        <!--android:onClick="onClickDepositTrash"-->
        <!--android:text="DEPOSIT"-->
        <!--app:layout_constraintEnd_toEndOf="parent"-->
        <!--app:layout_constraintHorizontal_bias="0.0"-->
        <!--app:layout_constraintStart_toStartOf="parent"-->
        <!--app:layout_constraintTop_toBottomOf="@+id/addPost" />-->



</android.support.constraint.ConstraintLayout>
